<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.natia.flock1.MainActivity"
    android:background="@color/Green">


    <EditText
        android:id="@+id/loginEmailEt"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:layout_above="@+id/loginPasswordEt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11sp"
        android:ems="10"
        android:textColor="@color/Text_1"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:textColorHint="@color/Text_1"/>


    <EditText
        android:id="@+id/loginPasswordEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginButtonEt"
        android:layout_alignEnd="@+id/loginEmailEt"
        android:layout_alignStart="@+id/loginEmailEt"
        android:layout_marginBottom="11sp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/Text_1"
        android:textColorHint="@color/Text_1" />


    <Button
    android:id="@+id/loginButtonEt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/log_in"
    android:textSize="20sp"
    android:background="@drawable/button_style"
    android:layout_marginBottom="52sp"
    android:layout_alignBottom="@+id/passwordRecover"
    android:layout_alignStart="@+id/loginPasswordEt"
    android:layout_alignEnd="@+id/loginPasswordEt"
    android:textColor="@color/Text_2"/>

    <!--place holder to access profile page for now-->
    <!--<Button
        android:id="@+id/profileButtonEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="review profile"
        android:textSize="20sp"
        android:background="@drawable/button_style"
        android:textColor="@color/Text_2"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/loginEmailEt" />-->


    <TextView
     android:id="@+id/passwordRecover"
     android:layout_width="140dp"
     android:layout_height="45dp"
     android:textSize="15sp"
     android:ems="10"
     android:text="@string/forget_password"
     android:textColor="@color/Text_1"
     android:layout_marginEnd="15dp"
     android:layout_alignParentBottom="true"
     android:layout_alignParentEnd="true" />


    <TextView
    android:id="@+id/signUp"
    android:layout_width="120dp"
    android:layout_height="45dp"
    android:textSize="15sp"
    android:ems="10"
    android:text="@string/sign_up"
    android:textColor="@color/Text_1"
    android:layout_alignParentBottom="true"
    android:layout_alignStart="@+id/loginButtonEt" />

    <ImageView
        android:id="@+id/loginImageViewEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="121dp"
        android:adjustViewBounds="true"
        android:background="@color/ButtonGreen"
        android:contentDescription="@string/loginLogo"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/flocklogo"
        android:layout_above="@+id/loginEmailEt"
        android:layout_alignParentStart="true" />


</RelativeLayout>
