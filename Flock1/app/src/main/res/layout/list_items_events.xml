<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relLayoutLEvents"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/md_blue_500">

    <ImageView
        android:id="@+id/eventUserImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:contentDescription="@string/eventUserImage"
        android:scaleType="fitCenter"
        android:visibility="visible"
        tools:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/event_list_text_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/eventUserImage"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="visible"
        tools:textStyle="bold">

        <TextView
            android:id="@+id/event_start_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Start"
            tools:textStyle="bold"/>

        <TextView
            android:id="@+id/event_end_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_start_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:maxLines="1"
            tools:text="End"
            tools:textStyle="bold"/>

        <TextView
            android:id="@+id/event_lines_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_end_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            tools:text="Lines"
            tools:textStyle="bold"/>

        <TextView
            android:id="@+id/event_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_lines_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            tools:text="Time"
            tools:textStyle="bold"/>

        <TextView
            android:id="@+id/event_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_time_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            tools:text="Date"
            tools:textStyle="bold"/>

        <TextView
            android:id="@+id/event_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_date_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            tools:text="Name"
            tools:textStyle="bold"/>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/event_list_text_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/event_list_text_titles"
            android:maxLines="1">


            <TextView
                android:id="@+id/event_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="18sp"
                tools:text="Start"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/event_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_start"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:textSize="18sp"
                tools:text="End"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/event_lines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_end"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                tools:text="Lines" />


            <TextView
                android:id="@+id/event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_lines"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="18sp"
                tools:text="Time" />

            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_time"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="18sp"
                tools:text="Date" />

            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_date"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="18sp"
                tools:text="Name" />




    </RelativeLayout>

</RelativeLayout>

