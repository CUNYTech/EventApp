<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.natia.flock1.CreateAccountActivity"
    android:background="@color/Green">

    <EditText
        android:id="@+id/emailAct"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="162dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:labelFor="@+id/emailAct"
        android:hint="@string/email"
        android:textColor="@color/ButtonGreen"
        android:textColorHint="@color/ButtonGreen"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/firstNameAct"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/firstNameAct"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="@string/firstName"
        android:inputType="textPersonName"
        android:labelFor="@+id/firstNameAct"
        android:textColor="@color/ButtonGreen"
        android:textColorHint="@color/ButtonGreen"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/lastNameAct"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailAct"
        tools:text="@string/first_name" />

    <EditText
        android:id="@+id/lastNameAct"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/last_name"
        android:inputType="textPersonName"
        android:labelFor="@+id/lastNameAct"
        android:textAlignment="viewStart"
        android:textColor="@color/ButtonGreen"
        android:textColorHint="@color/ButtonGreen"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/passwordAct"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNameAct"
        tools:text="@string/last_name" />


    <EditText
        android:id="@+id/passwordAct"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:labelFor="@+id/passwordAct"
        android:textColor="@color/ButtonGreen"
        android:textColorHint="@color/ButtonGreen"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/genderAct"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameAct"
        tools:text="@string/password" />


    <Button
        android:id="@+id/createAccountAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="26dp"
        android:background="@color/ButtonGreen"
        android:labelFor="@+id/createAccountAct"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageAct"
        app:layout_constraintVertical_bias="0.0"
        tools:text="@string/createAccountButton" />

    <EditText
        android:id="@+id/ageAct"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/age"
        android:inputType="date"
        android:labelFor="@+id/ageAct"
        android:textColor="@color/ButtonGreen"
        android:textColorHint="@color/ButtonGreen"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/createAccountAct"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderAct" />

    <EditText
        android:id="@+id/genderAct"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="@string/gender"
        android:inputType="text"
        android:labelFor="@+id/genderAct"
        android:textColor="@color/ButtonGreen"
        android:textColorHint="@color/ButtonGreen"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ageAct"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordAct" />

    <ImageButton
        android:id="@+id/profilePicAct"
        android:layout_width="128dp"
        android:layout_height="117dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/ButtonGreen"
        android:contentDescription="@string/profile_pic"
        android:cropToPadding="true"
        android:elevation="1dp"
        android:labelFor="@+id/profilePicAct"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/emailAct"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/neutral1" />

</android.support.constraint.ConstraintLayout>
